<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:background="#00B0FF"
    tools:context="com.arianasp.finaltask.CardOverviewFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="88dp">

        <LinearLayout
            android:id="@+id/rel1"
            android:layout_width="199dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview Income"
                android:textColor="#FFFFFF"
                android:background="#1A237E"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold"/>

            <android.support.design.widget.TextInputLayout style="@style/etStyle01">

                <EditText
                    android:id="@+id/tvDescription"
                    android:hint="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout style="@style/etStyle02">

                <EditText
                    android:id="@+id/tvAmount"
                    android:hint="Amount"
                    style="@style/etStyleNum"
                    />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center">

                <Button
                    android:text="ADD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonAddIncome" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/cv1"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/rel2"
            android:layout_width="199dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview Expenses"
                android:textColor="#FFFFFF"
                android:background="#1A237E"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textAllCaps="true"/>

            <android.support.design.widget.TextInputLayout style="@style/etStyle01">

                <EditText
                    android:id="@+id/tvstuff"
                    android:hint="Stuff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout style="@style/etStyle02">

                <EditText
                    android:id="@+id/tvprice"
                    android:hint="Price"
                    style="@style/etStyleNum"
                    />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:text="ADD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonAddExpenses" />
            </LinearLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:text="Transaction Page"
        android:textSize="35sp"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

</RelativeLayout>
